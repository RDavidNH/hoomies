<div class="container">
    <h1>Edit Profile</h1>
    <hr>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class:"form-horizontal" }) do |f| %>
      <div class="row">
          <!-- left column -->
          <div class="col-md-4">
            <div class="text-center form-control-file border">
              <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
              <h6>Upload a different photo...</h6>
              <%= f.file_field :avatar %>
            </div>
          </div>
          
          <!-- edit form column -->
          <div class="col-md-8 personal-info">
            <div class="alert alert-info alert-dismissable">
              <a class="panel-close close" data-dismiss="alert">Ã—</a> 
              <i class="fa fa-coffee"></i>
              Update your <strong>Personal Information</strong>.
            </div>
            <h3>Personal info</h3>
            
               <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group">
                <%= f.label :firstname, class:"col-lg-3 control-label" %><br />
     
                <div class="col-lg-8">
                      <%= f.text_field :firstname, autofocus: true, class: "form-control", autocomplete: "name" %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :lastname, class:"col-lg-3 control-label" %><br />
                <div class="col-lg-8">
                      <%= f.text_field :lastname, autofocus: true, class: "form-control", autocomplete: "lastname" %>
                </div>
              </div>

               <div class="form-group">
                <%= f.label :phone, class:"col-lg-3 control-label" %><br />
                <div class="col-lg-8">
                      <%= f.text_field :phone, autofocus: true, class: "form-control", autocomplete: "phone" %>
                </div>
              </div>

            
              <div class="form-group">
                <%= f.label :address, class:"col-lg-3 control-label" %><br />
                <div class="col-lg-8">
                      <%= f.text_field :address, autofocus: true, class: "form-control", autocomplete: "address" %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :email, class:"col-lg-3 control-label" %><br />

                <div class="col-lg-8">
                <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
                </div>
              </div>
              
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
              
              
              <div class="form-group">
                      <%= f.label :password, class:"col-lg-3 control-label" %> <i>(leave blank if you don't want to change it)</i><br />
                      <div class="col-lg-8">
                      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                      <% if @minimum_password_length %>
                        <br />
                        <em><%= @minimum_password_length %> characters minimum</em>
                      <% end %>
                </div>

                    </div>

                    <div class="form-group">
                      <%= f.label :password_confirmation, class:"col-lg-3 control-label" %><br />
                <div class="col-lg-8">

                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                    </div>
                  </div>

                    <div class="form-group">
                      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                <div class="col-lg-8">

                      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
                    </div>
                    </div>
              <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                  <div class="row">
                  <%= f.submit "Update", class: "btn btn-lg btn-primary col-lg-6" %>
                  <!-- <span></span> -->
                  <%= link_to "Back", :back, class: "btn btn-lg btn-danger col-lg-6" %>
                    
                  </div>
                </div>
              </div>
          </div>
      </div>
  <% end %>
</div>
<hr>