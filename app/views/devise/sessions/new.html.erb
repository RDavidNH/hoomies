<style>
  body {
    background-image: url('/assets/bg_1.jpg');
    background-repeat: no-repeat;
    background-position-x: center;
  }
</style>

<div class="container">
  <div class="offset-md-4">
    <div class="wrap-login100 p-l-25 p-r-25 p-t-20 p-b-25" style="margin-top: 30px;width: 350px; opacity: 0.8">
        <span class="login100-form-title p-b-5">
            Se connecter
        </span>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login100-form validate-form"}) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="wrap-input100 validate-input m-b-5" data-validate="Email is required">
            <span class="label-input100">Email</span>

            <%= f.email_field :email, class: "input100", placeholder: "Votre e-mail" %>
            <span class="focus-input100" data-symbol="&#xf206;"></span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Password is required">
            <span class="label-input100">Mot de passe</span>

            <%= f.password_field :password, class: "input100", placeholder: "Votre mot de passe" %>
            <span class="focus-input100" data-symbol="&#xf190;"></span>
        </div>

        <div class="text-right p-t-5 p-b-5" style="display: flex  ; justify-content :center;">
            <a href="#">
                Mot de passe oubli√©?
            </a>
        </div>

        <div class="container-login100-form-btn">
            <div class="wrap-login100-form-btn">
                <div class="login100-form-bgbtn"></div>
                <button class="login100-form-btn">
                    Se connecter
                </button>
            </div>
        </div>

        <div class="txt1 text-center p-t-5 p-b-5">
            <span>
                Se connecter avec
            </span>
        </div>

        <div class="flex-c-m">
        
            <%= link_to(user_facebook_omniauth_authorize_path, class:'login100-social-item bg1') do %>
                <i class="fa fa-facebook"></i> 
            <%end%>

            <%= link_to(user_google_oauth2_omniauth_authorize_path, class:'login100-social-item bg3') do %>
                <i class="fa fa-google"></i> 
            <%end%>

        </div>

        <div class="flex-col-c p-t-5">
            <span class="txt1 p-b-17">
                Ou
            </span>
            <a href="#" id="sign-up" data-toggle="modal" data-dismiss="modal" aria-label="Close" data-target="#signupModal" class="txt2">
                S'inscrire
            </a>
        </div>

    <% end %>
  </div>
</div>
</div>
