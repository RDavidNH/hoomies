<br>
<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h1> <%= @house.title %> </h1>
            <hr>
            <div id="houses-carousel">
                <div class="room-gallery">
                    <img class="gallery-hightlight" src="<%= image_url('houses/room1-big.jpeg') %>" alt="room1" />
                    <div class="room-preview">
                        <!-- <img src="<%= image_url('houses/room1-big.jpeg') %>" class="room-active" alt="" />
                        <img src="<%= image_url('houses/room2-big.jpeg') %>" alt="" />
                        <img src="<%= image_url('houses/room3-big.jpeg') %>" alt="" /> -->


                        <div id="houses-single-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                            <% for photo in @house.photos %>
                                <img src="<%= url_for(photo) %>" class="room-active" alt="" />
                            <% end %>
                            </div>
                            <!-- <div class="carousel-item">
                                <img src="<%= image_url('houses/room1-big.jpeg') %>" alt="" />
                                <img src="<%= image_url('houses/room2-big.jpeg') %>" alt="" />
                                <img src="<%= image_url('houses/room3-big.jpeg') %>" alt="" />
                            </div> -->
                        </div>
                        <a class="carousel-control-prev" href="#houses-single-carousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#houses-single-carousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        </div>
                        
                    </div>
                </div>
            </div>

            <br>

            <h2>Description</h2>

            <% if ( @house.user ==  current_user )%>
            <%=  link_to 'Modifier', edit_house_path(@house.id) %>
            <%=  link_to 'Supprimer', house_path(@house.id), method: 'delete' %>
            <%end%>
            <p><%= @house.description %></p>
            <p><%= @house.status %></p>


        </div>
        <div class="col-sm-4">

        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-sm-12">
            <h3>Laissez un commentaire</h3>
            <%= form_tag house_comments_path(@house.id), method: 'post' do %>
            <div class="form-group">
                <%= text_area :comment, :content, class: 'form-control', placeholder: 'Laissez un commentaire ...' %>
            </div>
            <%= submit_tag 'Commenter', class: 'btn btn-primary btn-block' %>
            <% end %>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 mt-5">
            <h3>Commentaires</h3>

            <% @house.comments.each do |comment| %>
            <div class="media">
                <!--
                  <img src="..." class="mr-3" alt="...">
                      -->
                <div class="media-body">
                    <h5 class="mt-0">
                        <%= comment.user.firstname %> <%= comment.user.lastname %>
                    </h5>
                    <%=  link_to 'Modifier', '#' %>
                    <%=  link_to 'Supprimer', house_comment_path(@house.id, comment.id), method: 'delete' %>
                    <p><%= comment.content %></p>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>