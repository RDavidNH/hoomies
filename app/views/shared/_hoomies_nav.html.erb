<%= render 'shared/signin_modal' %>
<%= render 'shared/signup_modal' %>


<div class="site-wrap">

    <div class="site-mobile-menu">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close mt-3">
                <span class="icon-close2 js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>
    <!-- .site-mobile-menu -->

    <div class="site-navbar site-navbar-small shadow-sm" style="border-bottom: 1px solid white;">
        <div class="container py-1">
            <div class="row align-items-center">
                <div class="col-8 col-md-8 col-lg-2">
                    <h1 class="mb-0">
                        <a href="/" class="text-white h2 mb-0">
                            <strong>Hoomies<span class="text-danger">.</span></strong>
                        </a>
                    </h1>
                </div>
                <div class="col-4 col-md-4 col-lg-10">
                    <nav class="site-navigation text-right text-md-right" role="navigation">

                        <div class="d-inline-block d-lg-none ml-md-0 mr-auto py-3">
                            <a href="#" class="site-menu-toggle js-menu-toggle text-white">
                                <span class="icon-menu h3"></span></a>
                        </div>

                        <ul class="site-menu js-clone-nav d-none d-lg-block">
                            <li class="active">
                                <a href="/">Accueil</a>
                            </li>
                            <li>
                                <a href="<%= new_house_path %>">Créer une annonce</a>
                            </li>
                            
                            <li class="has-children">
                                <a href="#">Je cherche</a>
                                <ul class="dropdown arrow-top">
                                    <li>
                                        <a href="<%= houses_path %>?status=1">Maison à louer</a>
                                    </li>
                                    <li>
                                        <a href="<%= houses_path %>?status=2">Maison à vendre</a>
                                    </li>
                                    <li>
                                        <a href="<%= houses_path %>">Toutes les offres</a>
                                    </li>
                                </ul>
                            </li>

                            <li class="active">
                                <%= link_to "Contact", new_contact_path%>
                            </li>

                        <% if user_signed_in? %>
                             <li class="has-children">
                                  <a href="#">
                                        <% if current_user.avatar.attached? %>
                                            <%= image_tag current_user.avatar, class:"avatar"%>
                                        <% else %>
                                            <i class="icon-user-o"> </i>
                                        <% end %>

                                        <% if current_user.firstname || current_user.lastname %>
                                            <%= current_user.lastname %>
                                            <%= current_user.firstname %>
                                        <% else %>
                                            Edit Profil
                                        <% end %>
                                  </a>
                                  <ul class="dropdown arrow-top" role="menu">
                                        <li>
                                            <%= link_to(users_profil_path) do %>
                                                <i class="icon-user-o"></i> Mon profil
                                            <%end%>
                                       </li>
                                       <li>
                                            <%= link_to(edit_user_registration_path, method: :get) do %>
                                                <i class="fa fa-edit"></i> Editer profil
                                            <% end %>
                                       </li>

                                        <% if current_user.role == 'admin' || current_user.role == 'owner' %>
                                            <li>
                                                <%= link_to(rails_admin_path, method: :get) do %>
                                                <i class="fa fa-line-chart"> Mes annonces</i>
                                                <% end %>
                                            </li>
                                        <% end %>

                                       <li>
                                            <%= link_to(destroy_user_session_path, method: :delete) do %>
                                                <i class="fa fa-sign-out"></i> Se déconnecter
                                            <% end %>
                                       </li>
                                  </ul>
                             </li>
                             <% if @path_url_is_new === true %>
                                 <span class="icon icon-notifications" style="color:aliceblue;font-size: 27px;position: relative;top: 5px;"></span>
                             <% end %>
                        <% else %>
                            <li class="has-children">
                                <a href="#" role="button"><i class="icon-user-o mr-1"></i>Connexion</a>
                                <ul class="dropdown arrow-top" role="menu">
                                    <li><a href="#" id="log-in" data-toggle="modal" data-target="#signinModal"> <i class="fa fa-sign-in"></i> Se connecter </a></li>
                                    <li><a href="#" id="sign-up" data-toggle="modal" data-target="#signupModal"><i class="fa fa-user-plus"></i> S'inscrire</a></li>
                                </ul>
                            </li>
                        <% end %>

                        </ul>
                    </nav>
                </div>

            </div>
        </div>
    </div>
</div>
