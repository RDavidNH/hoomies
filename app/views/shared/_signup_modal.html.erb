<div class="modal fade" id="signupModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="limiter">

                <div class="wrap-login100 p-l-55 p-r-55 p-t-20 p-b-80">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span arria-hidden="true" class="x-char">&times;</span>
                    </button>
                    <span class="login100-form-title p-b-50">
                        S'inscrire
                    </span>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'login100-form'}) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="wrap-input100 validate-input m-b-23" data-validate="Email is reauired">
                        <span class="label-input100">Email</span>

                        <%= f.email_field :email, class: "input100", placeholder: "Entrez votre email"%>
                        <span class="focus-input100" data-symbol="&#xf206;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <span class="label-input100">Mot de passe</span>

                        <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %>
                        <br/>
                        <%= f.password_field :password, autocomplete: "new-password" ,class:"input100", placeholder: "Entrez votre mot de passe" %>
                        <span class="focus-input100" data-symbol="&#xf190;"></span>
                    </div>

                    <br/>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <span class="label-input100">Confirmer</span>

                        <%= f.password_field :password_confirmation, class: "input100", placeholder: "Confirmer votre mot de passe" %>
                        <span class="focus-input100" data-symbol="&#xf190;"></span>
                    </div>

                    <br>
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                S'inscrire
                            </button>
                        </div>
                    </div>
                <% end %>
                <br>
                    <div class="flex-c-m">
                    
                        <%= link_to(user_facebook_omniauth_authorize_path, class:'login100-social-item bg1') do %>
                            <i class="fa fa-facebook"></i> 
                        <%end%>

                        <%= link_to(user_google_oauth2_omniauth_authorize_path, class:'login100-social-item bg3') do %>
                            <i class="fa fa-google"></i> 
                        <%end%>

                    </div>
            </div>
        </div>
    </div>
</div>
</div>
