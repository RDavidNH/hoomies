<div class="site-section site-section-sm pb-0">
  <div class="container">
    <div class="row">
      <form action="<%= houses_filter_path %>" method="GET" class="form-search col-md-12" style="margin-top: -100px;">
        <div class="row  align-items-end">
          <div class="col-md-3">
            <label for="type">Types</label>
            <div class="select-wrap">
              <span class="icon icon-arrow_drop_down"></span>
              <select name="type" id="type" class="form-control d-block rounded-0">
                  <option value="all">Tous</option>
                <% @types.each do |type| %>
                    <option value="<%= type.id %>"><%= type.name %></option>
                <% end %>
              </select>
            </div>
          </div>
          <div class="col-md-3">
            <label for="status">Type d'offre</label>
            <div class="select-wrap">
              <span class="icon icon-arrow_drop_down"></span>
              <select name="status" id="status" class="form-control d-block rounded-0">
                  <% @statuses.each do |status, label| %>
                      <option value="<%= status %>"><%= label %></option>
                  <% end %>
              </select>
            </div>
          </div>
          <div class="col-md-3">
            <label for="district">Quartier</label>
            <div class="select-wrap">
              <span class="icon icon-arrow_drop_down"></span>
              <select name="district" id="district" class="form-control d-block rounded-0">
                  <% @districts.each do |district| %>
                      <option value="<%= district.id %>"><%= district.name %></option>
                  <% end %>
              </select>
            </div>
          </div>
          <div class="col-md-3">
            <button type="submit" name="button" class="btn btn-success text-white btn-block rounded-0">
                Chercher
            </button>
          </div>
        </div>
      </form>
    </div>

