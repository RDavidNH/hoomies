<div class="modal fade" id="testimonialModal"  tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Testimonial</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span arria-hidden="true" class="x-char">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="testimonial-modal">
            <p>Edit your testimonial</p>

            <%= form_tag testimonial_path(current_user.testimonial.id), method: "PUT" do %>
        <%= label_tag 'Contenu' %>
        <%= text_area_tag 'content'%>
        <br>
 
            <p> Rate Us</p>
              <ul class="rating-ul">
                <% for index in 1..5 do %>
                  
                    <%= label_tag "rating_#{index}" do %>
                      <li class="stars-ico stars-icon-off" style="float: left" data-stars="<%= index %>" id="starid-<%= index %>"> </li>

                      <%= radio_button_tag :rating, index%>
                    <% end %>
     
                <%end%>
              </ul>
          <br>
            <%= submit_tag "Save testimonial" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>